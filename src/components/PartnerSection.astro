---
import { Image } from 'astro:assets';
import otptaxLogo from '../assets/otptax-logo.png';
---

<section class="partner-section section">
  <div class="container">
    <div class="partner-content">
      <p class="partner-text">
        Need assistance with sales & use tax and additional state-level compliance instead? Check out our partner company Xtra OTP Tax LLC.
      </p>
      <div class="partner-logo">
        <a 
          href="https://www.xtraotptax.com/" 
          target="_blank" 
          rel="noopener noreferrer"
          class="logo-link"
        >
          <Image 
            src={otptaxLogo} 
            alt="Xtra OTP Tax LLC - Partner Company" 
            class="partner-logo-image"
            loading="lazy"
            quality={80}
          />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .partner-section {
    background-color: var(--color-white);
    /* Uses global .section padding: 80px 0 (5rem), no additional padding needed */
  }

  .partner-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .partner-text {
    font-size: 1.2rem;
    color: var(--color-gray);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .partner-logo {
    display: flex;
    justify-content: center;
  }

  .logo-link {
    display: inline-block;
    transition: all 0.3s ease;
    border-radius: 12px;
    padding: 1.5rem;
    background-color: var(--color-gray-light);
    border: 2px solid var(--color-gray-light);
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .logo-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--color-sage-light), var(--color-sage));
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
  }

  .logo-link:hover {
    transform: translateY(-1px) scale(1.00);
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    border-color: var(--color-sage);
  }

  .logo-link:hover::before {
    opacity: 0.05;
  }

  .logo-link:focus {
    outline: none;
    border-color: var(--color-sage);
    box-shadow: 0 0 0 3px rgba(107, 140, 174, 0.2);
  }

  .partner-logo-image {
    max-width: 300px;
    height: auto;
    transition: all 0.3s ease;
    position: relative;
    z-index: 2;
  }

  .logo-link:hover .partner-logo-image {
    transform: scale(1.02);
  }

  @media (max-width: 768px) {
    .partner-section {
      /* Uses global .section responsive padding */
    }

    .partner-text {
      font-size: 1.1rem;
      margin-bottom: 1.5rem;
    }

    .partner-logo-image {
      max-width: 250px;
    }

    .logo-link {
      padding: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .partner-section {
      /* Uses global .section responsive padding */
    }

    .partner-text {
      font-size: 1rem;
      margin-bottom: 1rem;
    }

    .partner-logo-image {
      max-width: 200px;
    }

    .logo-link {
      padding: 1rem;
    }
  }
</style>