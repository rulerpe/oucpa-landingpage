---
import { Image } from 'astro:assets';
import otptaxLogo from '../assets/otptax-logo.png';
---

<section class="partner-section section">
  <div class="container">
    <div class="partner-content">
      <p class="partner-text">
        Need assistance with sales & use tax and additional state-level compliance instead? Check out our partner company Xtra
      </p>
      <div class="partner-logo">
        <a 
          href="https://www.xtraotptax.com/" 
          target="_blank" 
          rel="noopener noreferrer"
          class="logo-link"
        >
          <Image 
            src={otptaxLogo} 
            alt="Xtra OTP Tax LLC - Partner Company" 
            class="partner-logo-image"
            loading="lazy"
            quality={80}
          />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .partner-section {
    background-color: var(--color-white);
    /* Uses global .section padding: 80px 0 (5rem), no additional padding needed */
  }

  .partner-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .partner-text {
    font-size: 1.2rem;
    color: var(--color-gray);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .partner-logo {
    display: flex;
    justify-content: center;
  }

  .logo-link {
    display: inline-block;
    transition: all 0.3s ease;
    border-radius: 8px;
    padding: 1rem;
  }

  .logo-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .partner-logo-image {
    max-width: 300px;
    height: auto;
    transition: opacity 0.3s ease;
  }

  .logo-link:hover .partner-logo-image {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .partner-section {
      /* Uses global .section responsive padding */
    }

    .partner-text {
      font-size: 1.1rem;
      margin-bottom: 1.5rem;
    }

    .partner-logo-image {
      max-width: 250px;
    }

    .logo-link {
      padding: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .partner-section {
      /* Uses global .section responsive padding */
    }

    .partner-text {
      font-size: 1rem;
      margin-bottom: 1rem;
    }

    .partner-logo-image {
      max-width: 200px;
    }

    .logo-link {
      padding: 0.5rem;
    }
  }
</style>