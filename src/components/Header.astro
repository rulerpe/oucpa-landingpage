---
import { Image } from 'astro:assets';
import otptaxLogo from '../assets/otptax-logo.png';
import oucpaLogo from '../assets/oucpa-logo.png';
---

<header class="header">
  <div class="container">
    <div class="nav-wrapper">
      <div class="logo-section">
        <div class="logo">
          <a href="#home">
            <Image src={oucpaLogo} alt="Ou CPA LLC" width="60" />
          </a>
        </div>
        <div class="contact-info">
          <div class="contact-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" stroke="currentColor" stroke-width="2" fill="none"/>
            </svg>
            <a href="tel:7027564507">(702) 756-4507</a>
          </div>
          <div class="contact-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke="currentColor" stroke-width="2" fill="none"/>
              <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2" fill="none"/>
            </svg>
            <a href="mailto:ou.cpanotary@gmail.com">ou.cpanotary@gmail.com</a>
          </div>
        </div>
      </div>
      <nav class="nav">
        <ul class="nav-list">
          <li><a href="#home" class="nav-link">Home</a></li>
          <li><a href="#services" class="nav-link">Areas of Practice</a></li>
          <li><a href="#contact" class="nav-link">Contact</a></li>
          <li>
            <a
              href="https://www.xtraotptax.com/"
              target="_blank"
              rel="noopener noreferrer"
              class="partner-nav-btn"
            >
              <Image
                src={otptaxLogo}
                alt="Xtra OTP Tax LLC - Partner Company"
                class="partner-nav-logo"
                loading="eager"
                quality={80}
              />
            </a>
          </li>
        </ul>
      </nav>
      <button class="mobile-menu-btn" id="mobile-menu-btn">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    z-index: 1000;
    transition: all 0.3s ease;
    border-bottom: 1px solid var(--color-gray-light);
  }

  .nav-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
  }

  .logo-section {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .logo a {
    display: block;
    transition: opacity 0.3s ease;
  }

  .logo a:hover {
    opacity: 0.8;
  }

  .logo img {
    object-fit: contain;
    margin: -5px 0;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .contact-item svg {
    color: var(--color-sage);
    flex-shrink: 0;
  }

  .contact-item a {
    color: var(--color-dark);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .contact-item a:hover {
    color: var(--color-sage);
  }

  .nav-list {
    display: flex;
    align-items: center;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    color: var(--color-dark);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    color: var(--color-sage);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-sage);
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .partner-nav-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    border-radius: 6px;
    padding: 0.4rem;
    background-color: var(--color-gray-light);
    border: 2px solid var(--color-gray-light);
    cursor: pointer;
    position: relative;
    overflow: hidden;
    text-decoration: none;
  }

  .partner-nav-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--color-sage-light), var(--color-sage));
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
  }

  .partner-nav-btn:hover {
    transform: translateY(-1px) scale(1.02);
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
    border-color: var(--color-sage);
  }

  .partner-nav-btn:hover::before {
    opacity: 0.05;
  }

  .partner-nav-btn:focus {
    outline: none;
    border-color: var(--color-sage);
    box-shadow: 0 0 0 3px rgba(107, 140, 174, 0.2);
  }

  .partner-nav-logo {
    max-width: 80px;
    height: auto;
    max-height: 28px;
    transition: all 0.3s ease;
    position: relative;
    z-index: 2;
    display: block;
    object-fit: contain;
  }

  .partner-nav-btn:hover .partner-nav-logo {
    transform: scale(1.05);
  }

  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    gap: 4px;
  }

  .mobile-menu-btn span {
    width: 25px;
    height: 3px;
    background-color: var(--color-dark);
    transition: all 0.3s ease;
  }

  @media (max-width: 1024px) {
    .logo-section {
      gap: 1rem;
    }

    .contact-info {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .contact-item a {
      font-size: 0.75rem;
    }

    .contact-item svg {
      width: 12px;
      height: 12px;
    }

    .partner-nav-logo {
      max-width: 50px;
    }

    .partner-nav-btn {
      padding: 0.4rem;
    }
  }

  @media (max-width: 768px) {
    .logo img {
      height: 45px;
      max-width: 180px;
      margin: -2.5px 0;
    }

    .contact-item a {
      font-size: 0.7rem;
    }

    .nav {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background-color: white;
      border-top: 1px solid var(--color-gray-light);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .nav.active {
      display: block;
    }

    .nav-list {
      flex-direction: column;
      gap: 0;
      padding: 1rem 0;
    }

    .nav-link {
      display: block;
      padding: 1rem 20px;
      border-bottom: 1px solid var(--color-gray-light);
    }

    .nav-link:last-child {
      border-bottom: none;
    }

    .partner-nav-btn {
      display: block;
      padding: 1rem 20px;
      border-bottom: 1px solid var(--color-gray-light);
      border-radius: 6px;
      background-color: var(--color-gray-light);
      border: 2px solid var(--color-gray-light);
      text-align: center;
      margin: 0 20px;
    }

    .partner-nav-btn:hover {
      transform: none;
      box-shadow: none;
      background-color: var(--color-sage-light);
      border-color: var(--color-sage);
    }

    .partner-nav-logo {
      max-width: 40px;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .mobile-menu-btn.active span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .mobile-menu-btn.active span:nth-child(2) {
      opacity: 0;
    }

    .mobile-menu-btn.active span:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }
  }

  @media (max-width: 480px) {
    .logo img {
      height: 40px;
      max-width: 160px;
      margin: -2px 0;
    }

    .logo-section {
      gap: 0.75rem;
    }

    .contact-info {
      gap: 0.15rem;
    }

    .contact-item a {
      font-size: 0.65rem;
    }

    .contact-item svg {
      width: 10px;
      height: 10px;
    }

    .partner-nav-logo {
      max-width: 80px;
    }

    .partner-nav-btn {
      padding: 0.75rem 20px;
    }
  }
</style>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const nav = document.querySelector('.nav');

  if (mobileMenuBtn && nav) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenuBtn.classList.toggle('active');
      nav.classList.toggle('active');
    });
  }

  // Close mobile menu when clicking on nav links
  const navLinks = document.querySelectorAll('.nav-link');
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      if (mobileMenuBtn && nav) {
        mobileMenuBtn.classList.remove('active');
        nav.classList.remove('active');
      }
    });
  });

  // Header scroll effect
  window.addEventListener('scroll', () => {
    const header = document.querySelector('.header');
    if (header) {
      if (window.scrollY > 100) {
        header.style.backgroundColor = 'rgba(255, 255, 255, 0.98)';
      } else {
        header.style.backgroundColor = 'rgba(255, 255, 255, 0.95)';
      }
    }
  });
</script>