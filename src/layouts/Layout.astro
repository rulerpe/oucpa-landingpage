	/* Palette Toggle Button */
	.palette-toggle {
		position: fixed;
		bottom: 20px;
		right: 20px;
		z-index: 1000;
		width: 50px;
		height: 50px;
		border: none;
		border-radius: 50%;
		background-color: var(--color-sage);
		color: var(--color-white);
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
		transition: all 0.3s ease;
	}

	.palette-toggle:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
		background-color: var(--color-sage-dark);
	}

	.palette-toggle:active {
		transform: translateY(0);
	}

	@media (max-width: 768px) {
		.palette-toggle {
			bottom: 15px;
			right: 15px;
			width: 45px;
			height: 45px;
			z-index: 99999;
		}
	}
</style>

<script is:inline>
	// Color Palette Toggle Functionality
	document.addEventListener('DOMContentLoaded', function() {
		const toggleButton = document.getElementById('palette-toggle');
		const body = document.body;
		
		// Check for saved palette preference or default to palette 1
		const savedPalette = localStorage.getItem('colorPalette') || 'palette-1';
		
		// Apply saved palette
		if (savedPalette === 'palette-2') {
			body.classList.add('palette-2');
		}
		
		// Toggle functionality
		toggleButton.addEventListener('click', function() {
			const isCurrentlyPalette2 = body.classList.contains('palette-2');
			
			if (isCurrentlyPalette2) {
				// Switch to palette 1
				body.classList.remove('palette-2');
				localStorage.setItem('colorPalette', 'palette-1');
			} else {
				// Switch to palette 2
				body.classList.add('palette-2');
				localStorage.setItem('colorPalette', 'palette-2');
			}
		});
	});
</script>
