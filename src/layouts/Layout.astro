<style is:global>
	:root {
		--color-sage: #6B8CAE;
		--color-sage-light: #8FA4BE;
		--color-sage-dark: #5A7A9A;
		--color-cream: #F8F9FA;
		--color-cream-dark: #E9ECEF;
		--color-white: #FFFFFF;
		--color-dark: #2D3748;
		--color-gray: #718096;
		--color-gray-light: #E2E8F0;
	}

	/* Alternative Palette - Dark Navy Theme */
	.palette-2 {
		--color-sage: #2C3E50;
		--color-sage-light: #34495E;
		--color-sage-dark: #1A252F;
		--color-cream: #F8F6F3;
		--color-cream-dark: #F0EDE8;
		--color-white: #FFFFFF;
		--color-dark: #2D3748;
		--color-gray: #718096;
		--color-gray-light: #E2E8F0;
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
		transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		line-height: 1.6;
		color: var(--color-dark);
		background-color: var(--color-white);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.section {
		padding: 80px 0;
	}

	h1, h2, h3, h4, h5, h6 {
		font-weight: 600;
		line-height: 1.2;
		margin-bottom: 1rem;
	}

	h1 {
		font-size: 3rem;
		font-weight: 700;
	}

	h2 {
		font-size: 2.5rem;
	}

	h3 {
		font-size: 1.5rem;
	}

	p {
		margin-bottom: 1rem;
		color: var(--color-gray);
	}

	.btn {
		display: inline-block;
		padding: 12px 24px;
		border-radius: 6px;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.3s ease;
		border: none;
		cursor: pointer;
		font-size: 1rem;
	}

	.btn-primary {
		background-color: var(--color-sage);
		color: var(--color-white);
	}

	.btn-primary:hover {
		background-color: var(--color-sage-dark);
		transform: translateY(-2px);
	}

	.btn-secondary {
		background-color: transparent;
		color: var(--color-sage);
		border: 2px solid var(--color-sage);
	}

	.btn-secondary:hover {
		background-color: var(--color-sage);
		color: var(--color-white);
	}

	@media (max-width: 768px) {
		.section {
			padding: 60px 0;
		}

		h1 {
			font-size: 2.5rem;
		}

		h2 {
			font-size: 2rem;
		}

		.container {
			padding: 0 16px;
		}
